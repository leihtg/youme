<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="width_0_height_wrap_weight_1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--radioButton通用样式-->
    <style name="rbtn" parent="width_0_height_wrap_weight_1">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <!--主框架下方radioButton样式-->
    <style name="tab_rb_style" parent="rbtn">
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">@dimen/tv_home_rbtn_size</item>
        <item name="android:textColor">@drawable/tab_selector_text</item>
    </style>

</resources>
